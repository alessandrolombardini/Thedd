<BorderPane id="panel" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="thedd.view.controller.PlayMenuController">
   <center>
      <GridPane BorderPane.alignment="CENTER">
        
         <columnConstraints>
          		<ColumnConstraints hgrow="SOMETIMES"/>
         </columnConstraints>
         <rowConstraints>
          		<RowConstraints vgrow="SOMETIMES" />
