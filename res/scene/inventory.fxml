<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import thedd.view.controller.AdaptiveLabel?>

<AnchorPane prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
	AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
	AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="thedd.view.controller.InventoryController"
	stylesheets="styles/inventory_statistics_style.css">
	<children>
		<GridPane AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<AnchorPane>
					<children>
						<TableView fx:id="table" AnchorPane.bottomAnchor="0.0"
							AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
							AnchorPane.topAnchor="0.0">
							<columns>
								<TableColumn fx:id="column" text="Inventory" />
							</columns>
							<columnResizePolicy>
								<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
							</columnResizePolicy>
						</TableView>
					</children>
				</AnchorPane>
				<BorderPane styleClass="background"
					GridPane.columnIndex="1">
					<center>
						<AdaptiveLabel fx:id="content" wrapText="true"
							textAlignment="CENTER" text="Select an item first." />
					</center>
					<bottom>
						<Button fx:id="useButton" mnemonicParsing="false"
							text="Button" BorderPane.alignment="CENTER" />
					</bottom>
				</BorderPane>
			</children>
		</GridPane>
	</children>
</AnchorPane>
