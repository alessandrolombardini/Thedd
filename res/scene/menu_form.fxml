<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="menu" stylesheets="styles/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="thedd.view.controller.MenuController">
   <top>
      <Label text="The dark destruction" textAlignment="CENTER" BorderPane.alignment="CENTER"/>
   </top>
   <center>
            <VBox fx:id="vbox" alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="play" mnemonicParsing="false" onAction="#handleNewGameButtonAction" text="NEW GAME"/>
                  <Button fx:id="exit" mnemonicParsing="false" onAction="#handleExitButtonAction" text="EXIT"/>
               </children>
            </VBox>
   </center>
</BorderPane>
